page {
  background: #fff;
  margin: 0;
  padding: 0;
}

/* 内容部分 */

.luntanCon {
  width: 750rpx;
  background: #fff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.luntanCon-con {
  padding: 44rpx 26rpx;
}

.luntanCon-tit {
  width: 72%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.luntanConTit-left {
  font-size: 32rpx;
  color: #424242;
  font-weight: 700;
}

.luntanConTit-right {
  width: 66rpx;
  height: 38rpx;
  background: #3393ff;
  border-radius: 10rpx;
  text-align: center;
  display: block;
  font-size: 20rpx;
  color: #fffefe;
  line-height: 38rpx;
}

.luntanCon-txt {
  font-size: 28rpx;
  color: #424242;
  margin-top: 8rpx;
  line-height: 38rpx;
}

.luntan-img {
  margin-top: 33rpx;
  display: flex;
  justify-content: space-between;
}

.luntan-imgCon {
  width: 166rpx;
  height: 166rpx;
  display: flex;
  flex-direction: column;
}

.luntan-imgCon image {
  width: 166rpx;
  height: 166rpx;
}

.luntan-from {
  width: 55%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.form-con {
  font-size: 24rpx;
  color: #424242;
}

.luntan-from image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.xiangmu {
  display: flex;
  justify-content: space-between;
}

.xiangmu-con {
  width: 24%;
}

.xiangmu-icon1 {
  font-size: 168rpx;
  color: #3594ff;
}

.xiangmu-ai {
  font-size: 26rpx;
  color: #424242;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.xiazai {
  font-size: 20rpx;
  color: #8e8e8e;
}

.yours {
  font-size: 24rpx;
  color: #3393ff;
}

.yours text {
  border-bottom: 1px solid #3393ff;
}

.data {
  font-size: 20rpx;
  color: #424242;
}

.cun {
  width: 100%;
  margin-top: 28rpx;
  background: #f6f6f6;
}

.nei {
  padding: 30rpx 32rpx;
}

.nide {
  font-size: 28rpx;
  color: #3393ff;
}

.pianjian {
  font-size: 28rpx;
  color: #424242;
}

.luntanCon-bot {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.luntanConBot-left, .luntanConBot-con, .luntanConBot-right {
  width: 33.3%;
  text-align: center;
  font-size: 22rpx;
  color: #8e8e8e;
  display: flex;
  justify-content: center;
}

.icon-chakan, .icon-pinglun, .icon-shoucang {
  font-size: 22rpx;
  margin-right: 16rpx;
}

.wordicon {
  font-size: 168rpx;
  color: #3594ff;
}

.xiazai-bot {
  font-size: 20rpx;
  color: #8e8e8e;
}

.luntan-xiazai-right {
  font-size: 30rpx;
  color: #424242;
}

.liuyan {
  width: 100%;
  margin-top: 40rpx;
  background: #f6f6f6;
}

.liuyan-con {
  padding: 30rpx 32rpx;
}

.liuyan1 {
  width: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 31rpx;
}

.liuyan-img image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.liuyan-txt {
  margin-left: 16rpx;
}

.liuyan-name {
  font-size: 28rpx;
  color: #3393ff;
}

.liuyan-nr {
  font-size: 28rpx;
  color: #424242;
}

.liuyan-data {
  font-size: 20rpx;
  color: #8e8e8e;
}

/* 底部 */

.tiezi-bot {
  padding: 0 26rpx;
}

.tit-bot-top {
  padding: 21rpx 0;
  border-top: 1px solid #EDEDED;
}

.tiezi-bot-top-icon {
  display: flex;
  justify-content: space-around;
}
.tit-bot-bot{
padding:0 0 19rpx 0;
display: flex;
justify-content: space-between;
}
.tit-bot-input {
  width: 532rpx;
  background: rgba(241, 241, 241, 1);
  border-radius: 4rpx;
font-size:28rpx;
font-weight:500;
color:rgba(142,142,142,1);
padding:5rpx 19rpx;
/* line-height: 60rpx; */
}
.tit-bot-btn{
background:rgba(72,155,254,1);
border-radius:4rpx;
font-size:28rpx;
font-weight:bold;
color:rgba(255,255,255,1);
display: block;
padding: 0 28rpx;
line-height: 60rpx;
margin: 0;
}
