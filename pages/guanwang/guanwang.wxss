.gw-cen{
  width:100%;
  background:#fff;
}
.gw-cen-con{
  padding:0 26rpx;
}
.gw-li{
  display:flex;
  width: 100%;
  height: 152rpx;
  align-items: center;
  justify-content: space-between;
}
.gw-li-left{
  width: 104rpx;
  height: 104rpx;
  border-radius: 10rpx;
}
.gw-li-left image{
  width: 104rpx;
  height: 104rpx;
  border-radius: 10rpx;
}
.gw-li-right{
  width: 560rpx;
  display: flex;
  height: 150rpx;
  border-bottom: 1px solid #D8D8D8;
  align-items: center;
  justify-content: space-between;
}
.gw-li-tit{
  font-size: 32rpx;
  color: #424242;
  margin-left: 3rpx;
  font-weight: 600;
}
.gw-li-right-btn{
background:rgba(51,147,255,1);
border-radius:10px;
color: #fff;
font-size: 28rpx; 
margin: 0;
}