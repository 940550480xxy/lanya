/* pages/guanzhu/guanzhu.wxss */
/* 导航栏 */

page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #fff;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #424242;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background:  rgba(51, 147, 255, 1);
}

.gz-con{
  padding: 0 26rpx;
}
/* 关注的人 */
.gz-top-cen {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ededed;
}

.gz-top-cen-chengjiu {
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 42rpx 0;
}

.gz-top-cen-cen {
  margin-left: 32rpx;
}

.gz-top-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.gz-top-cen-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gz-tit {
  font-size: 34rpx;
  font-weight: 700;
  margin-right: 20rpx;
  color: #424242;
}

.gz-chengjiu {
  font-size: 34rpx;
  color: #424242;
}

.gz-top-cen-bot {
  font-size: 28rpx;
  color: #8e8e8e;
  margin-top: 17rpx;
}

.gz-top-bot {
  display: flex;
  height: 96rpx;
  margin-top: 39rpx;
  border-top: 1px solid #ededed;
  justify-content: space-around;
  align-items: center;
}

.gz-top-right {
  width: 129rpx;
  height: 48rpx;
  position: relative;
}

.gz-guanzhu {
  width: auto;
  padding: 0 35rpx;
  height: 48rpx;
  background: rgba(51, 147, 255, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #fff;
  position: absolute;
  left: 0;
  top: 0;
}
.active-tag .gz-guanzhu {
  background: #03e2ff;
  color: #fff;
  border: 1rpx solid #fff;
}
.gz-guanzhu::after {
  border: none;
}

.gz-guanzhued {
  width: auto;
  height: 48rpx;
  padding: 0 23rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: #eef6ff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #3393ff;
}

.gz-guanzhued::after {
  border: none;
}

/* 关注的帖子 */
.gz-tiezi-li{
   display: flex;
  justify-content: flex-start;
  padding: 42rpx 0;
  border-bottom: 1px solid #EDEDED;
}
.gz-tiezi-left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.gz-tiezi-right{
  margin-left: 22rpx;
}
.gz-li-tit{
  display: flex;
  justify-content: flex-start;
}
.gz-li-tit-txt{
  font-size: 32rpx;
  color: #424242;
  font-weight: bold;
  max-width: 481rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.gz-li-tit-rig{
  width: auto;
  padding:0 14rpx;
  height: 38rpx;
  line-height: 38rpx;
  background:rgba(51,147,255,1);
border-radius:10rpx;
color: #fff;
font-size: 20rpx;
margin-left: 20rpx;
}

.gz-from {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.gz-form-con {
  font-size: 24rpx;
  color: #424242;
}

.gz-from image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.gz-yours {
  font-size: 24rpx;
  color: #3393ff;
  margin-left: 14rpx;
}

.gz-yours text {
  border-bottom: 1px solid #3393ff;
}

.gz-data {
  font-size: 20rpx;
  color: #424242;
  margin-left: 14rpx;
}

