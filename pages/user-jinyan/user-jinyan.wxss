/* 关注的人 */
page{
  background: #fff;
}
.gz-con{
  padding: 0 26rpx;
}
.gz-con-ul{
  border-bottom: 1px solid #EDEDED;
}
.gz-top-cen {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ededed;
}

.gz-top-cen-chengjiu {
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 42rpx 0;
}

.gz-top-cen-cen {
  margin-left: 32rpx;
}

.gz-top-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.gz-top-cen-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gz-tit {
  font-size: 34rpx;
  font-weight: 700;
  margin-right: 20rpx;
  color: #424242;
}

.gz-chengjiu {
  font-size: 34rpx;
  color: #424242;
}

.gz-top-cen-bot {
  font-size: 28rpx;
  color: #8e8e8e;
  margin-top: 17rpx;
}

.gz-top-bot {
  display: flex;
  height: 96rpx;
  margin-top: 39rpx;
  border-top: 1px solid #ededed;
  justify-content: space-around;
  align-items: center;
}

.gz-top-right {
  width: 129rpx;
  height: 48rpx;
  position: relative;
}

.gz-guanzhu {
  width: auto;
  padding: 0 35rpx;
  height: 48rpx;
  background: rgba(51, 147, 255, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #fff;
  position: absolute;
  left: 0;
  top: 0;
}
.active-tag .gz-guanzhu {
  background: #03e2ff;
  color: #fff;
  border: 1rpx solid #fff;
}
.gz-guanzhu::after {
  border: none;
}

.gz-guanzhued {
  width: auto;
  height: 48rpx;
  padding: 0 23rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: #eef6ff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #3393ff;
}

.gz-guanzhued::after {
  border: none;
}
